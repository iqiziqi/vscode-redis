{
	"name": "vscode-redis",
	"displayName": "vscode-redis",
	"description": "A simple vscode extension for redis",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:redis.connect",
		"onCommand:redis.disconnect"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "redis.connect",
				"title": "Redis: Connect",
				"icon": {
					"dark": "resources/dark/connect.svg",
					"light": "resources/light/connect.svg"
				}
			},
			{
				"command": "redis.disconnect",
				"title": "Redis: Disconnect",
				"icon": {
					"dark": "resources/dark/remove.svg",
					"light": "resources/light/remove.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "redis-explorer",
					"name": "redis"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "redis.connect",
					"when": "view == redis-explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "redis.disconnect",
					"when": "view == redis-explorer && viewItem == connection-tree-item",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "Redis",
				"properties": {
					"redis.connections": {
						"type": "array",
						"default": [],
						"items": {
							"type": "object",
							"properties": {
								"host": {
									"type": "string"
								},
								"port": {
									"type": "number"
								},
								"name": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/ioredis": "^4.0.19",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.7.2",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"ioredis": "^4.14.1"
	}
}
